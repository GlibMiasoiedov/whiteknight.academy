    "content":  "\t\t\u003cdiv data-elementor-type=\"wp-page\" data-elementor-id=\"8138\" class=\"elementor elementor-8138\"\u003e\n\t\t\t\t\u003cdiv class=\"elementor-element elementor-element-323ad2a e-con-full e-flex sc_layouts_column_icons_position_left e-con e-parent\" data-id=\"323ad2a\" data-element_type=\"container\"\u003e\n\t\t\t\t\u003cdiv class=\"elementor-element elementor-element-0e8b8a1 elementor-widget__width-inherit sc_fly_static elementor-widget elementor-widget-html\" data-id=\"0e8b8a1\" data-element_type=\"widget\" data-widget_type=\"html.default\"\u003e\n\t\t\t\t\t\u003c!-- WK Chess Landing Component - Adult Style --\u003e\r\n\u003cstyle\u003e\r\n    .wk-landing-widget {\r\n        display: flex;\r\n        flex-direction: column;\r\n        align-items: center;\r\n        padding: 24px;\r\n        font-family: system-ui, -apple-system, sans-serif;\r\n    }\r\n\r\n    .wk-landing-title {\r\n        display: flex;\r\n        align-items: center;\r\n        gap: 10px;\r\n        color: #D4AF37;\r\n        font-size: 14px;\r\n        font-weight: 800;\r\n        text-transform: uppercase;\r\n        letter-spacing: 1.5px;\r\n        margin-bottom: 20px;\r\n    }\r\n\r\n    .wk-landing-title::before {\r\n        content: \u0027♞\u0027;\r\n        font-size: 20px;\r\n    }\r\n\r\n    .wk-chessboard {\r\n        display: grid;\r\n        grid-template-columns: repeat(8, 1fr);\r\n        width: 320px;\r\n        height: 320px;\r\n        border-radius: 8px;\r\n        overflow: hidden;\r\n        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);\r\n        margin-bottom: 24px;\r\n    }\r\n\r\n    .wk-square {\r\n        width: 40px;\r\n        height: 40px;\r\n        display: flex;\r\n        align-items: center;\r\n        justify-content: center;\r\n        position: relative;\r\n    }\r\n\r\n    /* Adult version board colors (brown/cream) */\r\n    .wk-square.light {\r\n        background: #f0d9b5;\r\n    }\r\n\r\n    .wk-square.dark {\r\n        background: #b58863;\r\n    }\r\n\r\n    /* Piece image */\r\n    .wk-square img {\r\n        width: 85%;\r\n        height: 85%;\r\n        object-fit: contain;\r\n        filter: drop-shadow(1px 1px 1px rgba(0, 0, 0, 0.3));\r\n    }\r\n\r\n    .wk-landing-btn {\r\n        display: inline-flex;\r\n        align-items: center;\r\n        justify-content: center;\r\n        gap: 10px;\r\n        padding: 16px 40px;\r\n        background: linear-gradient(135deg, #D4AF37 0%, #C5A028 100%);\r\n        color: #0B0E14;\r\n        font-size: 14px;\r\n        font-weight: 800;\r\n        text-transform: uppercase;\r\n        letter-spacing: 1.5px;\r\n        border: none;\r\n        border-radius: 10px;\r\n        cursor: pointer;\r\n        transition: all 0.3s ease;\r\n        box-shadow: 0 4px 20px rgba(212, 175, 55, 0.35);\r\n    }\r\n\r\n    .wk-landing-btn:hover {\r\n        transform: translateY(-2px);\r\n        box-shadow: 0 6px 28px rgba(212, 175, 55, 0.45);\r\n    }\r\n\r\n    @media (max-width: 400px) {\r\n        .wk-chessboard {\r\n            width: 280px;\r\n            height: 280px;\r\n        }\r\n\r\n        .wk-square {\r\n            width: 35px;\r\n            height: 35px;\r\n        }\r\n    }\r\n\u003c/style\u003e\r\n\r\n\u003cdiv class=\"wk-landing-widget\"\u003e\r\n    \u003cdiv class=\"wk-landing-title\"\u003eWHITE KNIGHT COACH ONLINE\u003c/div\u003e\r\n\r\n    \u003cdiv class=\"wk-chessboard\" id=\"wk-animated-board\"\u003e\u003c/div\u003e\r\n\r\n    \u003cbutton class=\"wk-landing-btn\" onclick=\"WKChessUI.open()\"\u003e\r\n        ♟ Test Your Skills\r\n    \u003c/button\u003e\r\n\u003c/div\u003e\r\n\r\n\u003cscript\u003e\r\n    (function () {\r\n        // CDN for chess pieces (lichess pieces)\r\n        const PIECE_CDN = \u0027https://lichess1.org/assets/_H5H5hd/piece/cburnett\u0027;\r\n\r\n        // Piece file names\r\n        const PIECE_FILES = {\r\n            \u0027K\u0027: \u0027wK.svg\u0027, \u0027Q\u0027: \u0027wQ.svg\u0027, \u0027R\u0027: \u0027wR.svg\u0027, \u0027B\u0027: \u0027wB.svg\u0027, \u0027N\u0027: \u0027wN.svg\u0027, \u0027P\u0027: \u0027wP.svg\u0027,\r\n            \u0027k\u0027: \u0027bK.svg\u0027, \u0027q\u0027: \u0027bQ.svg\u0027, \u0027r\u0027: \u0027bR.svg\u0027, \u0027b\u0027: \u0027bB.svg\u0027, \u0027n\u0027: \u0027bN.svg\u0027, \u0027p\u0027: \u0027bP.svg\u0027\r\n        };\r\n\r\n        // The Immortal Game positions\r\n        const POSITIONS = [\r\n            \u0027rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR\u0027,\r\n            \u0027rnbqkbnr/pppppppp/8/8/4P3/8/PPPP1PPP/RNBQKBNR\u0027,\r\n            \u0027rnbqkbnr/pppp1ppp/8/4p3/4P3/8/PPPP1PPP/RNBQKBNR\u0027,\r\n            \u0027rnbqkbnr/pppp1ppp/8/4p3/4PP2/8/PPPP2PP/RNBQKBNR\u0027,\r\n            \u0027rnbqkbnr/pppp1ppp/8/8/4Pp2/8/PPPP2PP/RNBQKBNR\u0027,\r\n            \u0027rnbqkbnr/pppp1ppp/8/8/4Pp2/5N2/PPPP2PP/RNBQKB1R\u0027,\r\n            \u0027rnbqkb1r/pppp1ppp/5n2/8/4Pp2/5N2/PPPP2PP/RNBQKB1R\u0027,\r\n            \u0027rnbqkb1r/pppp1ppp/5n2/4P3/5p2/5N2/PPPP2PP/RNBQKB1R\u0027,\r\n            \u0027rnbqkb1r/pppp1ppp/8/4P3/5pn1/5N2/PPPP2PP/RNBQKB1R\u0027,\r\n            \u0027rnbqkb1r/pppp1ppp/8/4P3/2B2pn1/5N2/PPPP2PP/RNBQK2R\u0027,\r\n            \u0027rnbqkb1r/ppp2ppp/3p4/4P3/2B2pn1/5N2/PPPP2PP/RNBQK2R\u0027,\r\n            \u0027rnbqkb1r/ppp2ppp/3p4/4P3/2BP1pn1/5N2/PPP3PP/RNBQK2R\u0027,\r\n            \u0027rnb1kb1r/ppp2ppp/3p4/4P2q/2BP1pn1/5N2/PPP3PP/RNBQK2R\u0027,\r\n            \u0027rnb1kb1r/ppp2ppp/3p4/4P2q/2BP1pn1/5N2/PPP3PP/RNBQ1RK1\u0027,\r\n            \u0027rnb1kb1r/ppp2ppp/3p4/4P3/2BP1p1n/5Nq1/PPP3PP/RNBQ1RK1\u0027,\r\n            \u0027rnb1kb1r/ppp2ppp/3p4/4P3/2BP1p1n/5NP1/PPP4P/RNBQ1RK1\u0027,\r\n            \u0027rnb1kb1r/ppp2ppp/3p4/4P3/2BP1p2/5NP1/PPP4n/RNBQ1RK1\u0027,\r\n            \u0027rnb1kb1r/ppp2ppp/3p4/4P3/2BP1p2/2N2NP1/PPP4Q/R1B2RK1\u0027\r\n        ];\r\n\r\n        let currentPos = 0;\r\n\r\n        function fenToBoard(fen) {\r\n            const board = [];\r\n            const rows = fen.split(\u0027/\u0027);\r\n            for (const row of rows) {\r\n                const boardRow = [];\r\n                for (const char of row) {\r\n                    if (!isNaN(char)) {\r\n                        for (let i = 0; i \u003c parseInt(char); i++) boardRow.push(null);\r\n                    } else {\r\n                        boardRow.push(char);\r\n                    }\r\n                }\r\n                board.push(boardRow);\r\n            }\r\n            return board;\r\n        }\r\n\r\n        function renderBoard(fen) {\r\n            const el = document.getElementById(\u0027wk-animated-board\u0027);\r\n            if (!el) return;\r\n\r\n            const board = fenToBoard(fen);\r\n            el.innerHTML = \u0027\u0027;\r\n\r\n            for (let row = 0; row \u003c 8; row++) {\r\n                for (let col = 0; col \u003c 8; col++) {\r\n                    const sq = document.createElement(\u0027div\u0027);\r\n                    const isLight = (row + col) % 2 === 0;\r\n                    sq.className = \u0027wk-square \u0027 + (isLight ? \u0027light\u0027 : \u0027dark\u0027);\r\n\r\n                    const piece = board[row][col];\r\n                    if (piece \u0026\u0026 PIECE_FILES[piece]) {\r\n                        const img = document.createElement(\u0027img\u0027);\r\n                        img.src = PIECE_CDN + \u0027/\u0027 + PIECE_FILES[piece];\r\n                        img.alt = piece;\r\n                        sq.appendChild(img);\r\n                    }\r\n\r\n                    el.appendChild(sq);\r\n                }\r\n            }\r\n        }\r\n\r\n        function animate() {\r\n            renderBoard(POSITIONS[currentPos]);\r\n            currentPos = (currentPos + 1) % POSITIONS.length;\r\n        }\r\n\r\n        function init() {\r\n            const el = document.getElementById(\u0027wk-animated-board\u0027);\r\n            if (el) {\r\n                renderBoard(POSITIONS[0]);\r\n                setInterval(animate, 2500);\r\n            }\r\n        }\r\n\r\n        if (document.readyState === \u0027loading\u0027) {\r\n            document.addEventListener(\u0027DOMContentLoaded\u0027, init);\r\n        } else {\r\n            init();\r\n        }\r\n    })();\r\n\u003c/script\u003e\t\t\t\t\u003c/div\u003e\n\t\t\t\t\u003c/div\u003e\n\t\t\u003cdiv class=\"elementor-element elementor-element-5ffb126 e-flex e-con-boxed sc_layouts_column_icons_position_left e-con e-parent\" data-id=\"5ffb126\" data-element_type=\"container\"\u003e\n\t\t\t\t\t\u003cdiv class=\"e-con-inner\"\u003e\n\t\t\t\t\u003cdiv class=\"elementor-element elementor-element-db52d4b sc_fly_static elementor-widget elementor-widget-shortcode\" data-id=\"db52d4b\" data-element_type=\"widget\" data-widget_type=\"shortcode.default\"\u003e\n\t\t\t\t\t\t\t\u003cdiv class=\"elementor-shortcode\"\u003e    \r\n    \u003c!-- Popup Overlay (rendered once) --\u003e\r\n                    \u003cdiv id=\"wk-chess-popup-overlay\" onclick=\"if(event.target === this) WKChessUI.close()\"\u003e\r\n            \u003cdiv id=\"wk-react-root\"\u003e\u003c/div\u003e\r\n        \u003c/div\u003e\r\n    \r\n            \u003cscript\u003e\r\n            document.addEventListener(\u0027DOMContentLoaded\u0027, function () {\r\n                if (window.WKChessUI) {\r\n                    window.WKChessUI.open();\r\n                } else {\r\n                    // Wait for React to load\r\n                    setTimeout(function () { window.WKChessUI \u0026\u0026 window.WKChessUI.open(); }, 500);\r\n                }\r\n            });\r\n        \u003c/script\u003e\r\n        \u003c/div\u003e\n\t\t\t\t\t\t\u003c/div\u003e\n\t\t\t\t\t\u003c/div\u003e\n\t\t\t\t\u003c/div\u003e\n\t\t\t\t\u003c/div\u003e\n\t\t",
